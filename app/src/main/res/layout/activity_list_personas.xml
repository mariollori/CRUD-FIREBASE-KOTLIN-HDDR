<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ListPersonas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <io.github.florent37.shapeofview.shapes.DiagonalView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="4dp"
            app:shape_diagonal_angle="4"

            app:shape_diagonal_position="bottom">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4B7CDC"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista de Pesonas Registradas"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"/>



        </io.github.florent37.shapeofview.shapes.DiagonalView>



        <ListView
            android:id="@+id/listpersons"
            android:layout_width="380dp"
            android:layout_gravity="center"
            android:layout_height="500dp"/>



    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:backgroundTint="#4B7CDC"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"

        android:id="@+id/registrarb"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_add"
        android:scaleType="center"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>